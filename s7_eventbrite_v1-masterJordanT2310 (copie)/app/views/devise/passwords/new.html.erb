<% if resource.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <%= devise_error_messages! %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "form-signin mt-3", method: :post }) do |f| %>
      <h1 class="h3 mb-3 font-weight-normal text-center">Mot de passe oublié ?</h1>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "Réinitialiser mon mot de passe", class: "btn btn-lg btn-primary btn-block" %>
      </div>

      <% end %>

      <div class="mb-5 mt-3">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
