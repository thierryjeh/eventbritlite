<% if flash[:success] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:success] %>
  </div>
<% end %>

<% flash[:success] = nil %>

<h1 class="display-4 ml-5 mt-4 mb-5">Event</h1>

<h2 class="text-monospace ml-5 my-4"><%= @event.title %></h2>

<p class="lead ml-5">
  Description : <span class="text-monospace"><%= @event.description %></span><br />
  Start date : <span class="text-monospace"><%= @event.start_date.strftime("%d/%m/%Y, %H:%M") %></span><br />
  End date : <span class="text-monospace"><%= (@event.start_date + @event.duration.minutes).strftime("%d/%m/%Y, %H:%M") %></span><br />
  Duration : <span class="text-monospace"><%= @event.duration %></span> mins<br />
  Location : <span class="text-monospace"><%= @event.location %></span><br />
  Price : <span class="text-monospace"><%= @event.price %> â‚¬</span>
</p>

<p class="lead ml-5">
  There are <span class="text-monospace"><%= @event.attendances.count %></span> participant(s).
</p>

<p class="lead ml-5">
  The event is held by : <%= @event.attendances[0].user.first_name %> <%= @event.attendances[0].user.last_name %>.
</p>
